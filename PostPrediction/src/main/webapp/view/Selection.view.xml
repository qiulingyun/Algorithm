<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" controllerName="sap.predictpost.controller.Selection">


	<Panel headerText="{i18n>selectionPanelTitle}" class="sapUiResponsiveMargin" width="auto">
		<content>
			<VBox id="checkVBox">
				<CheckBox id="checkBoxInterCompAdjust" text="{i18n>InterCompAdjustCheckBoxText}" />
				<CheckBox id="checkBoxPayroll" text="{i18n>PayrollCheckBoxText}" />
				<CheckBox id="checkBoxAccrual" text="{i18n>AccrualCheckBoxText}" />
				<CheckBox id="checkBoxFinancialAdjust" text="{i18n>FinancialAdjustCheckBoxText}" />
			</VBox>
			<FlexBox alignItems="Start">
				<items>
					<SegmentedButton id="periodSegmentedButton" selectedKey="today" class="sapUiResponsiveMargin">
						<items>
							<SegmentedButtonItem text="Today" key="today" />
							<SegmentedButtonItem text="This Week" key="week" />
							<SegmentedButtonItem text="This Month" key="month"/>
							<SegmentedButtonItem text="This Quarter" key="quarter"/>
							<SegmentedButtonItem text="This Year" key="year"/>
						</items>
						<layoutData>
							<FlexItemData growFactor="2" />
						</layoutData>
					</SegmentedButton>


					<Button text="{i18n>GenerateButtonText}" icon="sap-icon://accept"
						press="onPredict">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Button>
				</items>
			</FlexBox>

			<List id="predictionList" headerText="{i18n>predictionListTitle}"
				class="sapUiResponsiveMargin" width="auto"
				items="{
		         path : 'prediction>/Prediction',
		         sorter : {
		            path : 'Business' 
		         }
		      }">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>predictionListTitle}" />
						<ToolbarSpacer />
						<SearchField width="40%" search="onFilterPredictionList" />
					</Toolbar>
				</headerToolbar>
				<items>
					<ObjectListItem title="{prediction>Business}"

						number="{
							parts: [{path: 'prediction>Debit'}, {path: 'prediction>TransactionCurrency'}],
							type: 'sap.ui.model.type.Currency',
							formatOptions: {
								showMeasure: false
							}
						}"
						numberUnit="{prediction>TransactionCurrency}">
						<attributes>
							<ObjectAttribute
								text="{prediction>CompanyCode} {prediction>JournalEntryType}" />
							<ObjectAttribute text="{prediction>FiscalYear}" />
						</attributes>
					</ObjectListItem>
				</items>
			</List>

			<!-- <Button text="{i18n>showHelloButtonText}" press="onShowHello" -->
			<!-- class="sapUiSmallMarginEnd" /> -->
			<!-- <Input value="{/recipient/name}" valueLiveUpdate="true" width="60%" 
				/> -->
			<!-- <FormattedText text="Hello {/recipient/name}" class="sapUiSmallMargin" 
				/> -->
		</content>
	</Panel>

</mvc:View>